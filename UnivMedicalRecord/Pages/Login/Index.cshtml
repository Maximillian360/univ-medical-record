@page
@model UniversityMedicalRecord.Pages.Login.IndexModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <title></title>
</head>
<body style="background: #ffffff">
<div>
    <div class="row d-flex justify-content-md-center align-items-center vh-100">
        <div class=" card col-md-5 m-lg-5">
            <h2 class="card-header">Login</h2>
            <div class="card-body">
                 <span class="text-danger mt-1">@Model.WrongUserPassword</span>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control mt-1"/>
                        <span asp-validation-for="Username" class="text-danger mt-1"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control mt-1" type="password"/>
                        <span asp-validation-for="Password" class="text-danger mt-1"></span>
                    </div>
                    <div class="form-group mt-4 mb-2">
                        <input type="submit" value="Login" class="btn btn-dark" style="width: 100%;"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>