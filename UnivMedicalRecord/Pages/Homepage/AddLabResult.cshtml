@page
@model UnivMedicalRecord.Pages.Homepage.AddLabResult
@using Microsoft.Web.Helpers;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</head>

<body>

<form class="form-inline" id="form" method="post">
    <div>
        <div>
            <div class="row d-flex justify-content-md-center align-items-center vh-100">
                <div class="col-md-10">
                    <div class="card m-lg-10">
                        <div>
                            <h4 class="card-header">
                                Lab Results
                            </h4>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="card mb-3">
                                    <div class="card-body">

                                        <label asp-for="CbcRes" class="control-label"></label>
                                        <input type="file" asp-for="CbcRes" class="form-control" accept="image/*" />
                                        <span asp-validation-for="CbcRes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="card mb-3">
                                    <div class="card-body">

                                        <label asp-for="CholesterolRes" class="control-label"></label>
                                        <input type="file" asp-for="CholesterolRes" class="form-control" accept="image/*"/>
                                        <span asp-validation-for="CholesterolRes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="card mb-3">
                                    <div class="card-body">

                                        <label asp-for="UrinalysisRes" class="control-label"></label>
                                        <input type="file" asp-for="UrinalysisRes" class="form-control" accept="image/*" />
                                        <span asp-validation-for="UrinalysisRes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-body">

                                        <label asp-for="FecalysisRes" class="control-label"></label>
                                        <input type="file" asp-for="FecalysisRes" class="form-control" accept="image/*"/>
                                        <span asp-validation-for="FecalysisRes" class="text-danger"></span>
                                    </div>
                                </div>

                                <button type="submit" value="submit" class="btn btn-dark  mt-3" style="width: 100%;">
                                    Submit
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</body>
</html>