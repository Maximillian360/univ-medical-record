@page
@using UniversityMedicalRecord.Data
@model UnivMedicalRecord.Pages.Homepage.ViewRecords

@{
  ViewData["Title"] = "Medical Records";
}

<!DOCTYPE html>

<html>
<head> 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</head>
<div>
  <div class="row d-flex justify-content-md-center vh-100">
    <div class="col-md-10">
      <div class="card m-lg-5 h-75">
        <h4 class="card-header">
          Medical Records
          <form class="d-lg-inline"method="post">
            <button type="submit" class="btn btn-danger m-1" width="16" height="16" asp-page-handler="Close" style="float: right"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
              <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
            </svg></button>
          </form>
        </h4>
        <div class="card-body">
          <div class="row mt-2">
            <div class="col-md-15">
              <table class="table">
                <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Id</th>
                  <th scope="col">Number</th>
                  <th scope="col">  </th>
                </tr>
                </thead>
                <tbody>
    
                @foreach(var x in Model.Personals)
                {
                  <tr>
                    <th scope="row">@x.Id</th>
                    <td>@x.Name</td>
                    <td>@x.IdNumber</td>
                    <td>@x.IdNumber</td>
                    <td><a class = btn-close-white asp-page="./EditRecord" asp-route-id="@x.Id">Edit</a></td>
                  </tr>
     
                }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


</html>